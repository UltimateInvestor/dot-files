# make ls colorful
alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
# make grep colorful
alias grep='grep --color=auto -i'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
# set localhost alias
alias here="localhost"
# set move and copy to be verbose
alias mv="mv -v"
alias cp="cp -v"
alias vi="vim"
case `uname -s` in
 'Linux') alias vim="gvim" ;;
 'Darwin') alias vim="mvim" ;;
esac
