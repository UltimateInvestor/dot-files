# vim: ft=zsh

# cd
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias lcd='dirs -v'

# cleanconfig
alias clean_config="sed -e '/^#/ d' -e '/^ *$/ d'"
alias cl=clear

# copy
alias cp='cp -v'

# foreman
alias f=foreman

# git
alias g=git
alias gs='git s'
alias gp='git plr'

# grep
alias rg='grep -r'
alias rgi='grep -ri'
alias grep='grep --color=auto -i'

# here
alias here='localhost'

# hub
alias h=hub

# ls
alias ls='ls -G'
alias ll='ls -alFh'
alias la='ls -Ah'
alias l='ls -CFh'

# move
alias mv='mv -v'

# rails
alias r=rails

# rake
alias rk='rake'
alias rkt='RAILS_ENV=test rake'
alias rks='rake spec'

# rspec
alias rd='rspec --format d'

# silver searcher
alias ss='ag'
alias s='smart-grep'

# tmux
alias t=tmux
alias tm=tmuxstart

# tsuru
alias tu=tsuru

# vim | nvim
alias vim=nvim
alias vi=vim
alias v=vim
alias n=nvim

# alias for kubernetes
alias k8=kubectl
alias k=kubectl
alias ks="kubectl config use-context staging-context;kubectl"
alias kp="kubectl config use-context production-context;kubectl"

# alias for awsudo
alias asa=awsudo
alias awss="awsudo -u staging"
alias awso="awsudo -u operations"
alias awsp="awsudo -u production"

# alias for make
alias m=make
alias build=make build
